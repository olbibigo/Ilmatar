    <debug>true</debug>
    <offline>false</offline>
    <profiling>false</profiling> <!--works only if debug=true above -->
    
    <swiftmailer-options>
        <type>smtp</type>
        <host>smtp.castelis.local</host>
        <port>25</port>
        <username></username>
        <password></password>
        <encryption>null</encryption>
