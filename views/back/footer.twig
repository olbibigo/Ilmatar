<script>
    require(["jquery-ui"], function(Jq) {
        Jq("#aboutContainer").dialog({
            autoOpen: false,
            minWidth: 400,
            modal:true,
            show: {
                effect: "fade",
                duration: 500
            },
            hide: {
                effect: "fade",
                duration: 500
            }
        });
        Jq( ".fa-fire" ).on('click', function() {
            Jq("#aboutContainer" ).dialog("open"); 
        });
    });
</script>
{% endspaceless %}
