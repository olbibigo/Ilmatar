<div id="aboutContainer" title="{{ app.translator.trans("About...") }}">
    <p>{{ app.translator.trans('<b>%appname%</b> is powered by the <b>Ilmatar</b> framework, a Castelis software solution to design modern, elegant and efficient webapps.', {'%appname%' : appName})|raw }}<p>
    <p style="text-align:center;margin-top:20px;margin-bottom:30px">
        <a href="http://www.castelis.fr" target="blank" style="text-align:center"><img src="/img/logoCastelis.png" alt="Castelis logo"/></a>
    </p>
    <p style="text-align:center;">
        <a href="http://validator.w3.org/check?uri={{ url(constant('\\Project\\Controller\\PublicBackController::PUBLIC_DEFAULT_HOMEPAGE'))|url_encode }}" target="blank"><img src="/common/img/valid_html5.png" alt="HTML5" /></a>&nbsp;
        <a href="http://www.php.net" target="blank"><img src="/common/img/php_powered.png" alt="PHP5"/></a>&nbsp;
